<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting_Page">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#035534"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
       />




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="4dp"

        android:clickable="true"
        android:focusable="true"
        android:onClick="click_name_tag"



        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/image_view"
            android:src="@drawable/avatar"
            android:onClick="avatar_click"
            android:padding="10dp"/>



        <TextView
            android:id="@+id/headline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:padding="15dp"
            android:hint="Name"/>


        <TextView
            android:id="@+id/bottomline_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:padding="5dp"
            android:layout_marginHorizontal="15dp"/>



    </LinearLayout>


        <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Setting_Cat"
        android:paddingLeft="10dp"
        android:paddingVertical="14dp"
        android:text="Medicine Information"
        />



    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="160dp"></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Setting_Cat"
            android:paddingVertical="14dp"
            android:paddingLeft="10dp"
            android:text="Notification Settings" />


        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/Switch"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="    Silence Notifications                                                          " />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E1DFDF"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="16dp"
            android:text="Type of Notification Sound"
            android:textColor="#000000"


            />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/spinner"
        android:paddingHorizontal="8dp"





        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Setting_Cat"
            android:paddingVertical="14dp"
            android:paddingLeft="10dp"
            android:text="Display Settings" />


        <CheckBox
            android:id="@+id/checkbox_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:buttonTint="#FF3D00"
            android:onClick="CheckboxClickCheck"
            android:text="@string/Title_One" />

        <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E1DFDF"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/Setting_Cat"
            android:paddingLeft="10dp"
            android:paddingVertical="14dp"
            android:text="Others"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:paddingLeft="10dp"
            android:paddingVertical="14dp"
            android:text="Version 1.01"
            />




        </LinearLayout>
    </ScrollView>
</RelativeLayout>